<Window x:Class="Open_order.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Open_order"
        mc:Ignorable="d"
        Title="MainWindow" Height="381" Width="617" ResizeMode="CanMinimize">
    <Window.Resources>
        <ContextMenu x:Key="TrayMenu">
            <MenuItem Header="Hide" Click="ShowHideMainWindow" />
            <MenuItem Header="Item2" />
            <Separator />
            <MenuItem Header="Exit" Click="MenuExitClick" />
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Button x:Name="b_open" Content="Открыть" HorizontalAlignment="Left" Margin="295,165,0,0" VerticalAlignment="Top" Width="75" Click="b_open_Click"/>
        <TextBox x:Name="tb_order" HorizontalAlignment="Left" Height="24" Margin="270,103,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
